<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#777777"
            android:gravity="center"
            android:text="주변 카페가 궁금해 ?"/>

        <Button
            android:id="@+id/mapbutton"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:background="@drawable/mapmapbutton"
            android:text="확인해봐"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.56"
            android:src="@drawable/sbucks93" />

        <ImageView
            android:id="@+id/img02"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.56"
            android:src="@drawable/selecto19"/>

        <ImageView
            android:id="@+id/img03"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.56"
            android:src="@drawable/twosome7"/>

        <ImageView
            android:id="@+id/img04"
            android:layout_width="wrap_content"
            android:layout_height="268dp"
            android:layout_gravity="center"
            android:layout_weight="0.56"
            android:src="@drawable/theventi61"/>

        <ImageView
            android:id="@+id/img05"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.56"
            android:src="@drawable/mega42"/>

        <ImageView
            android:id="@+id/img06"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.56"
            android:src="@drawable/juicy38"/>

        <ImageView
            android:id="@+id/img07"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.56"
            android:src="@drawable/gong49"/>

        <ImageView
            android:id="@+id/img08"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.56"
            android:src="@drawable/ediya50"/>

        <ImageView
            android:id="@+id/img09"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.56"
            android:src="@drawable/dalkomm19"/>

        <ImageView
            android:id="@+id/img10"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.56"
            android:src="@drawable/chayam9" />

    </ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_previous"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:onClick="mOnClick"
            android:text="PREVIOUS"
            android:textColor="#ffffff"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:onClick="mOnClick"
            android:text="NEXT"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>